@model BlogCore.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Inicio";
}
<br />
<div class="row mt-1">
    <div class="col-sm-12">
        <h1 class="text-center text-dark bg-secondary py-1">Nuestros productos!</h1>
    </div>
</div>

@if (Model.ListaArticulos?.Any() == true)
{
    <hr />
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var articulo in Model.ListaArticulos.OrderByDescending(o => o.Id))
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@articulo.UrlImagen"
                         class="card-img-top"
                         style="height: 220px; object-fit: cover;"
                         alt="@articulo.Nombre" />
                    <div class="card-body text-center">
                        <h5 class="card-title mb-3">@articulo.Nombre</h5>
                        <a asp-action="Detalles"
                           asp-route-id="@articulo.Id"
                           class="btn btn-success w-100"
                           style="border-radius:10px;">Ver Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-muted">No hay artículos</p>
}
