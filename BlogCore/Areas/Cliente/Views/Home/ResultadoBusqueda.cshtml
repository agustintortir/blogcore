@model ListaPaginada<Articulo>
@using BlogCore.Models.ViewModels

    <h2 class="text-center">Lista de Entradas</h2>

@if(Model.Count() > 0)
{
    <hr />
    <div class="row">
        @foreach (var articulo in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@articulo.UrlImagen"
                         class="card-img-top"
                         style="height: 220px; object-fit: cover;"
                         alt="@articulo.Nombre" />
                    <div class="card-body text-center">
                        <h5 class="card-title mb-3">@articulo.Nombre</h5>
                        <a asp-action="Detalles"
                           asp-route-id="@articulo.Id"
                           class="btn btn-success w-100"
                           style="border-radius:10px;">Ver Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>

} else
{
    <p>No hay articulos</p>
}