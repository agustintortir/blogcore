@model BlogCore.Models.ViewModels.HomeVM

<!--Slider-->
<div id="sliderImagenes" class="carousel slide">

    <div class="carousel-inner">

        @{
            int contador = 0;

        }

        @foreach (var slider in Model.Sliders)
        {
            var itemDinamico = contador++ == 0 ? "active" : "";

            @if(slider.Estado == true)
            {
                <div class="carousel-item @itemDinamico">
                    <img src="@Url.Content(slider.UrlImagen)" class="d-block w-100">
                    </div>
            }
        }


